<section>
    <div class="container">
        <div class="row">
            
            <table class="table" id="userTable"> 
                <thead>
                    <tr>
                        <th scope="col">No</th>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th>Options</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each show_users}}
                    <tr>
                        <th scope="row">{{@index  }}</th>
                        <td>{{this.Name}}</td>
                        <td>{{this.Email}}</td>
                        <td>
                             <a href="/admin/edit-user/{{this._id}}" class="btn btn-primary">Edit</a>
                        <a href="/admin/delete-user/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you want delete{{this.Name}}')">Delete</a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</section>
{{!-- Fn for dataTable --}}
<script>
    $(document).ready( function () {
    $('#userTable').DataTable();
} );
</script>